<!DOCTYPE html>
<html>
<head>
  <title>Contact Manager</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <div class="container">
    <a href="/" class="nav">Contact Manager</a>
    <a href="/styles" class="nav">Styleguide</a>
  </div>
</header>

<main>
  <div class="container">
    <div data-container="main">
      <form action="#" class="create-form">

        <div class="form-row">
          <label class="form-label">First name</label>
          <input type="text" class="form-control first_name" name="First name">
        </div>

        <div class="form-row">
          <label class="form-label">Last name</label>
          <input type="text" class="form-control last_name" name="Last name">
        </div>

        <div class="form-row">
          <label class="form-label">Address</label>
          <textarea class="form-control address"  name="Address"></textarea>
        </div>

        <input type="submit" value="Add Person" class="form-button">
      </form>
    </div>
    <h2>All People</h2>
    <div data-container="people"></div>
  </div>
</main>

<%= javascript_include_tag 'application' %>

<script>
  $(document).ready(function(){
    PeopleApp.initialize();
  });
</script>

</body>
</html>
